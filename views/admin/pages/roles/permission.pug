doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Phân quyền
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css")
    style.
      .form-permission {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .table th {
        background-color: #007bff;
        color: white;
        text-align: center;
      }
      .table td {
        text-align: center;
        vertical-align: middle;
      }
      .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
      }
      .btn-primary {
        background-color: #0069d9;
        border-color: #005cbf;
      }
      .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
      }
  body
    div(record=record)
    div(class="container my-5")
      h1(class="text-center text-primary mb-4") Quản lý Phân quyền
      div(class="d-flex")
        include ../../partial/sidebar.pug
        div(class="container my-5" style="width: 85%;")
          form(action=`${prefixAdmin}/roles/permission?_method=PATCH` class="form-permission" method="POST")
            h5(class="text-secondary mb-3") Cấu hình quyền hạn
            table.table.table-bordered.table-striped.table-hover
              thead
                tr
                  th Tính năng
                  each item in record 
                    th #{item.title}
              tbody
                tr(class="d-none")
                  td
                  each item in record 
                    td(data-id=item._id)
                tr
                  td(class="fw-bold text-dark") Danh sách sản phẩm
                tr(data-roles="view_product") 
                  td Xem
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="add_product")
                  td Thêm mới
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="edit_product")
                  td Chỉnh sửa
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="delete_product")
                  td(class="text-danger") Xóa
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr
                  td(class="fw-bold text-dark") Danh mục sản phẩm 
                tr(data-roles="view_product-category") 
                  td Xem
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="add_product-category")
                  td Thêm mới
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="edit_product-category")
                  td Chỉnh sửa
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="delete_product-category")
                  td(class="text-danger") Xóa
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr
                  td(class="fw-bold text-dark") Nhóm quyền 
                tr(data-roles="view_roles") 
                  td Xem
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="add_roles")
                  td Thêm mới
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="edit_roles")
                  td Chỉnh sửa
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="delete_roles")
                  td(class="text-danger") Xóa
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr
                  td(class="fw-bold text-dark") Phân quyền 
                tr(data-roles="view_roles-permission") 
                  td Xem
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="add_roles-permission")
                  td Thêm mới
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="edit_roles-permission")
                  td Chỉnh sửa
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="delete_roles-permission")
                  td(class="text-danger") Xóa
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr
                  td(class="fw-bold text-dark") Tài khoản 
                tr(data-roles="view_account") 
                  td Xem
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="add_account")
                  td Thêm mới
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="edit_account")
                  td Chỉnh sửa
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                tr(data-roles="delete_account")
                  td(class="text-danger") Xóa
                  each item in record 
                    td: input(type="checkbox" class="form-check-input")
                    
                // Add more rows as needed
            input(data-permission class="d-none" name="permission")
            div(class="d-flex justify-content-end mt-4")
              button.btn.btn-primary(type="submit" button-submit) Cập nhật  
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js")
      script(src="/admin/js/roles.js")
